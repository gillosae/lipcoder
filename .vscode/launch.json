{
	"version": "0.2.0",
	"compounds": [
		{
			"name": "Run LipCoder (Client + Server)",
			"configurations": [
				"Launch Client",
				"Launch Server"
			]
		}
	],
	"configurations": [
		{
			"name": "Launch Server",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/dist/server/server.js",
			"args": [
				"--node-ipc"
			],
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "Launch Client",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/dist/client/**/*.js"
			]
		}
	]
}